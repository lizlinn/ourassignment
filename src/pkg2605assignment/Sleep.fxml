<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardHolderPane" prefHeight="285.0" prefWidth="483.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="pkg2605assignment.SleepController">
   <children>
      <LineChart fx:id="sleepChart" layoutX="11.0" layoutY="101.0" legendVisible="false" prefHeight="184.0" prefWidth="464.0" title="Sleep">
        <xAxis>
          <CategoryAxis label="Date" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Hours" prefWidth="61.0" side="LEFT" />
        </yAxis>
      </LineChart>
      <Label fx:id="sleepGoalText" layoutX="25.0" layoutY="14.0" prefHeight="18.0" prefWidth="268.0" text="Name's Sleep Goal (hours):">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="sysInSleepGoal" layoutX="224.0" layoutY="11.0" prefHeight="25.0" prefWidth="90.0" promptText="enter number">
         <font>
            <Font size="11.0" />
         </font>
      </TextField>
      <Button layoutX="315.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="19.0" prefWidth="39.0" text="Set">
         <font>
            <Font size="9.0" />
         </font>
      </Button>
      <ProgressBar fx:id="sleepProgress" layoutX="151.0" layoutY="74.0" prefWidth="200.0" progress="0.0" />
      <Label fx:id="sleepStatus" layoutX="194.0" layoutY="59.0" text="sleep goal fulfilment" textFill="#aba1a1">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
      <Label fx:id="errormessage" layoutX="224.0" layoutY="36.0" prefHeight="23.0" prefWidth="221.0" textFill="#ff3b30">
         <font>
            <Font name="System Italic" size="10.0" />
         </font>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
