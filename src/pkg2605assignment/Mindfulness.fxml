<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardHolderPane" prefHeight="285.0" prefWidth="483.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pkg2605assignment.MindfulnessController">
   <children>
      <Label layoutX="14.0" layoutY="137.0" prefHeight="33.0" prefWidth="158.0" text="Just 5 minutes." textAlignment="CENTER" textFill="#ff3b30">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="153.0" prefHeight="41.0" prefWidth="163.0" text="Make it a habit." textAlignment="CENTER" textFill="#ff3b30">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <BarChart fx:id="mindfulChart" layoutX="219.0" layoutY="50.0" legendVisible="false" prefHeight="241.0" prefWidth="291.0" title="Mindful Minutes">
        <xAxis>
          <CategoryAxis label="Date" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis label="Minutes" side="LEFT" />
        </yAxis>
      </BarChart>
      <HBox layoutX="7.0" layoutY="9.0" prefHeight="27.0" prefWidth="424.0">
         <children>
            <Label fx:id="mindfulGoalText" text="Name's Mindfulness Minutes Goal:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets top="3.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="sysInMindfulGoal" prefHeight="25.0" prefWidth="66.0" text="10000" />
            <Button mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="19.0" prefWidth="32.0" text="Set">
               <font>
                  <Font size="9.0" />
               </font>
               <HBox.margin>
                  <Insets left="4.0" top="3.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <ProgressBar fx:id="mindfulProgress" layoutX="15.0" layoutY="63.0" prefWidth="200.0" progress="0.0" />
      <Label fx:id="mindfulStatus" layoutX="16.0" layoutY="38.0" text="mindfulness minutes goal progress" textFill="#aba1a1">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
